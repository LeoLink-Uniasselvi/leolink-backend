# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=leolink_user
DB_PASS=leolink_password
DB_NAME=leolink

# Application Port (Render usa PORT automaticamente)
APP_PORT=5000

# JWT Secret (MUDE ISSO EM PRODUÇÃO!)
JWT_SECRET='your-super-secret-jwt-key-change-this-in-production'

# CORS Origins (separado por vírgulas para múltiplas origens)
# Exemplo: http://localhost:3000,https://seu-frontend.onrender.com
CORS_ORIGIN=http://localhost:3000

# Environment settings
NODE_ENV=development

# Database logging (set to 'true' only for debugging queries)
DB_LOGGING=false